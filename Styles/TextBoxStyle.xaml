<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:CustomControls="clr-namespace:LBV_WPF.CustomControls">

    <Style TargetType="{x:Type TextBox}" x:Key="TextBoxStyle">

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type TextBoxBase}">
                    <Border x:Name="border" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" Padding="0"
                            Background="{TemplateBinding Background}" SnapsToDevicePixels="True" CornerRadius="5">
                        <ScrollViewer x:Name="PART_ContentHost" Focusable="False" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{DynamicResource colorForeground}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource colorForeground}"/>
        <Setter Property="SelectionBrush" Value="{DynamicResource colorForegroundLowT}"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="CaretBrush" Value="{DynamicResource colorForeground}"/>

        <Style.Triggers>

            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="BorderBrush" Value="{DynamicResource colorDetailPri}"/>
            </Trigger>

        </Style.Triggers>

    </Style>



    <Style TargetType="{x:Type CustomControls:TextBoxWithSuggestions}">

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type CustomControls:TextBoxWithSuggestions}">
                    <Border BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Background="{TemplateBinding Background}"
                            Margin="0"
                            Padding="0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBox Grid.Row="0" x:Name="TextBoxWithSuggestions_TextBox" AutoWordSelection="True" Focusable="True"
                                     Text="{Binding Id, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource TextBoxStyle}"
                                     HorizontalContentAlignment="Left" HorizontalAlignment="Stretch"
                                     MinWidth="60" Padding="5,4" Margin="5,5,5,0"
                                     ToolTip="Neue Position durch Angabe der ID zur Rechnung hinzufügen. Die 0 können weggelassen werden (Ziffern 1+2: Nr des Bereichs | Ziffern 3+4: Nr der Leistung | Ziffern 5+6: Nr des Unterpunkts der Leistung)"/>
                            <CustomControls:TextBoxWithSuggestionsItemList Grid.Row="1" x:Name="TextBoxWithSuggestions_ItemList" HorizontalAlignment="Stretch" Focusable="False" Margin="5,0,0,0"/>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

    </Style>



    <Style TargetType="{x:Type CustomControls:TextBoxWithSuggestionsItemList}">

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type CustomControls:TextBoxWithSuggestionsItemList}">
                    <Border>
                        <Grid>
                            <Popup x:Name="TextBoxWithSuggestionsItemList_Popup" AllowsTransparency="True" Placement="Bottom" IsOpen="False">
                                <ListBox x:Name="TextBoxWithSuggestionsItemList_ListBox" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                         VerticalContentAlignment="Stretch" HorizontalAlignment="Stretch" Style="{StaticResource ListBoxSuggestionStyle}" ItemContainerStyle="{StaticResource ListBoxSuggestionItemStyle}"/>
                            </Popup>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

    </Style>

</ResourceDictionary>